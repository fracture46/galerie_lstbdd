<T3DataStructure>
	<sheets>
		<sDEF>
			<ROOT>
				<TCEforms>
					<sheetTitle>Function</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<switchableControllerActions>
						<TCEforms>
							<label>Select function</label>
							<config>
								<type>select</type>
								<items>
									<numIndex index="0">
										<numIndex index="0">Dernieres photos</numIndex>
										<numIndex index="1">Image-&gt;latest</numIndex>
									</numIndex>
									<numIndex index="1">
										<numIndex index="0">Derniers albums</numIndex>
										<numIndex index="1">Album-&gt;latest</numIndex>
									</numIndex>
									<numIndex index="2">
										<numIndex index="0">Liste albums</numIndex>
										<numIndex index="1">Album-&gt;list;Album-&gt;show;Album-&gt;search</numIndex>
									</numIndex>
									<numIndex index="3">
										<numIndex index="0">Liste auteurs</numIndex>
										<numIndex index="1">Auteur-&gt;list;Auteur-&gt;show</numIndex>
									</numIndex>
									<numIndex index="4">
										<numIndex index="0">Liste categories</numIndex>
										<numIndex index="1">Category-&gt;list;Category-&gt;show</numIndex>
									</numIndex>
								</items>
							</config>
						</TCEforms>
					</switchableControllerActions>
                    <settings.albumPid>
						<TCEforms>
							<label>id de la page Album</label>
							<config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>pages</allowed>
								<size>1</size>
								<maxitems>1</maxitems>
								<minitems>0</minitems>
							</config>
						</TCEforms>
					</settings.albumPid>
                    <settings.itemsPerPage>
                        <TCEforms>
                            <label>Nombre d'items pour la pagination</label>
                            <config>
                                <type>input</type>
                                <size>2</size>
                            </config>
                        </TCEforms>
                    </settings.itemsPerPage>
				</el>
			</ROOT>
		</sDEF>
	</sheets>
</T3DataStructure>